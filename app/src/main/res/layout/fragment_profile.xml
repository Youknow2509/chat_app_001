<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/toolbarBackground"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_toolbar_gradient_bulelight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Chat list -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/chatToolbar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_toolbar_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Thanh tìm kiếm đè lên -->
            <LinearLayout
                android:id="@+id/toolbarContent"
                android:layout_width="368dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Logo"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/appTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="E-Chat"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Search"
                    android:src="@drawable/search" />

                <ImageView
                    android:id="@+id/addIcon"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:contentDescription="Add"
                    android:src="@drawable/plus" />
            </LinearLayout>

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:hint="Search"
                android:background="@drawable/search_input_bg"
                android:drawableStart="@drawable/search"
                android:drawablePadding="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="48dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:inputType="text"
                android:visibility="gone" />
        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>
    <!-- Line under EditText -->
    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="153dp"
        android:layout_height="153dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@android:color/white"
        android:src="@drawable/user_circle_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarBackground" />

    <ImageView
        android:id="@+id/editAvatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/circle_darkblue"
        android:padding="6dp"
        android:src="@drawable/pen"
        app:layout_constraintBottom_toBottomOf="@id/avatarImage"
        app:layout_constraintEnd_toEndOf="@id/avatarImage" />

    <!-- Profile Name -->

    <FrameLayout
        android:id="@+id/saveButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatarImage">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leftButton"
            android:layout_width="177dp"
            android:layout_height="30dp"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/circle_darkblue"
            android:drawableStart="@drawable/pen"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Hủy"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rightButton"
            android:layout_width="178dp"
            android:layout_height="30dp"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/circle_darkblue"
            android:drawableStart="@drawable/pen"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Lưu"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </FrameLayout>


    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="John Lennon"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/saveButtonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/profileInfoContainer"
        android:layout_width="352dp"
        android:layout_height="154dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileName">

        <!-- Phone Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/email"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/emailDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/example_gmail_com"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/copyEmailButton"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/copy" />
        </LinearLayout>

        <!-- Gender Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/gender"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/genderDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/male"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/copyGenderButton"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/copy" />
        </LinearLayout>

        <!-- Birthday Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/birthday"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/birthdayDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_01_01_2004"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/copyBirthdayButton"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/copy" />
        </LinearLayout>

        <!-- Address Info -->
<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="16dp"-->
<!--            android:orientation="horizontal">-->

<!--            <TextView-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="0.3"-->
<!--                android:text="@string/address"-->
<!--                android:textSize="16sp" />-->

<!--            <TextView-->
<!--                android:id="@+id/addressDetail"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1"-->
<!--                android:text="@string/ha_noi_viet_nam"-->
<!--                android:textSize="16sp" />-->

<!--            <ImageView-->
<!--                android:id="@+id/copyAddressButton"-->
<!--                android:layout_width="@dimen/_18sdp"-->
<!--                android:layout_height="@dimen/_18sdp"-->
<!--                android:src="@drawable/copy" />-->
<!--        </LinearLayout>-->
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addButton"
        android:layout_width="293dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circle_darkblue"
        android:drawableStart="@drawable/pen"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/edit_profile"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileInfoContainer"
        app:layout_constraintVertical_bias="1.0" />

