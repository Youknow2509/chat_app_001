<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include
        android:id="@+id/network_status_view"
        layout="@layout/network_status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Toolbar background -->
    <View
        android:id="@+id/toolbarBackground"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_toolbar_gradient_bulelight"
        app:layout_constraintTop_toTopOf="@+id/network_status_view"
        app:layout_constraintStart_toStartOf="@+id/network_status_view"
        app:layout_constraintEnd_toEndOf="@+id/network_status_view" />


    <!-- Chat list -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/chatToolbar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_toolbar_gradient"
        app:layout_constraintTop_toTopOf="@+id/network_status_view"
        app:layout_constraintStart_toStartOf="@+id/network_status_view"
        app:layout_constraintEnd_toEndOf="@+id/network_status_view"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Nội dung Toolbar là LinearLayout: nút back + text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/backButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_arrow_forward_white"
                android:backgroundTint="#49F6FDFF"
                android:background="@drawable/shape_circle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circular"
                android:scaleType="centerInside"
                android:padding="12dp"/>

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:text="@string/create_group"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <!-- Label Name Group -->
    <TextView
        android:id="@+id/groupNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Name Group"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/chatToolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp" />

    <!-- EditText -->
    <EditText
        android:id="@+id/groupNameInput"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="@string/enter_name_group"
        android:background="@drawable/bg_input_box"
        android:paddingHorizontal="12dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textColorHint="#999999"
        app:layout_constraintTop_toBottomOf="@id/groupNameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Label Members -->
    <TextView
        android:id="@+id/memberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members"
        android:textColor="#999999"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/groupNameInput"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Add members button -->
    <LinearLayout
        android:id="@+id/addMemberLayout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="#E1F5FE"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/memberLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/plusIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="#40C4FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addMemberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/add_members_to_group"
            android:textColor="#40C4FF"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- List members -->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="410dp"
        android:layout_height="257dp"
        android:layout_marginBottom="84dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@id/createGroupButton"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMemberLayout"
        app:layout_constraintVertical_bias="0.857" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createGroupButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="24dp"
        android:background="@drawable/bg_button_gradient"
        android:text="@string/create_group"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="408dp"
        android:layout_height="73dp"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu_v2" />

</androidx.constraintlayout.widget.ConstraintLayout>
