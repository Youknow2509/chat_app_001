<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/checkboxSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivMediaThumbnail"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_toEndOf="@id/checkboxSelect"
            android:contentDescription="Media thumbnail"
            android:scaleType="centerCrop"
            android:background="#EEEEEE"/>

        <ImageView
            android:id="@+id/ivMediaType"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignEnd="@id/ivMediaThumbnail"
            android:layout_alignBottom="@id/ivMediaThumbnail"
            android:layout_margin="4dp"
            android:background="#88000000"
            android:padding="2dp"
            android:src="@drawable/ic_image"
            android:contentDescription="Media type" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/btnDelete"
            android:layout_toEndOf="@id/ivMediaThumbnail"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="filename.jpg"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFileDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2025-04-05"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvFileSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1024 KB"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete button"
            android:padding="8dp"
            android:src="@drawable/ic_delete" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>