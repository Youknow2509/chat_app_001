<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#686868">

    <include
        android:id="@+id/network_status_view"
        layout="@layout/network_status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nút quay lại -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_circle"
        android:src="@drawable/ic_back"
        android:contentDescription="Quay lại"
        app:layout_constraintStart_toStartOf="@+id/network_status_view"
        app:layout_constraintTop_toTopOf="@+id/network_status_view" />

    <!-- Tiêu đề cuộc gọi -->
    <TextView
        android:id="@+id/callingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calling ..."
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/network_status_view"
        app:layout_constraintStart_toStartOf="@+id/network_status_view"
        app:layout_constraintTop_toTopOf="@+id/backButton"
        app:layout_constraintBottom_toBottomOf="@+id/backButton" />

    <!-- Ảnh người gọi -->
    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="153dp"
        android:layout_height="153dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@android:color/white"
        android:src="@drawable/user_circle__1_"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <!-- Tên người gọi -->
    <TextView
        android:id="@+id/callerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="David Wayne"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatarImage" />

    <!-- Nút từ chối cuộc gọi -->
    <ImageButton
        android:id="@+id/declineButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/circle_red_button"
        android:src="@drawable/call_cancel"
        android:contentDescription="Từ chối cuộc gọi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline" />

    <!-- Nút chấp nhận cuộc gọi -->
    <ImageButton
        android:id="@+id/acceptButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/circle_green_button"
        android:src="@drawable/phone_calling"
        android:contentDescription="Chấp nhận cuộc gọi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline" />

    <!-- Guideline để căn giữa các nút -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
