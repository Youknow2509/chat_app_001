<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#929292">
    <!-- Nút quay lại -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_circle"
        android:src="@drawable/ic_back"
        android:contentDescription="Quay lại"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tiêu đề cuộc gọi -->
    <TextView
        android:id="@+id/callingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calling ..."
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backButton"
        app:layout_constraintBottom_toBottomOf="@+id/backButton" />
    <!-- Video đối phương hoặc avatar placeholder -->
    <FrameLayout
        android:id="@+id/remoteVideoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Video đối phương -->
        <TextureView
            android:id="@+id/remoteVideoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <!-- Avatar khi đối phương tắt camera -->
        <LinearLayout
            android:id="@+id/remoteAvatarContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatarImage"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@android:color/white"
                android:src="@drawable/user_circle__1_"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.3" />


            <TextView
                android:id="@+id/remoteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="David Wayne"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Floating video của bạn -->
    <FrameLayout
        android:id="@+id/localVideoContainer"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_header_squar"
        app:tint="@android:color/background_dark"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <!-- Các nút điều khiển -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/toggleMicButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/cancel_button_background"
            android:src="@drawable/mic__rec"
            app:tint="@android:color/background_dark"
            android:layout_marginEnd="24dp"/>

        <ImageButton
            android:id="@+id/endCallButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_red_button"
            android:src="@drawable/call_cancel"
            android:layout_marginEnd="24dp"/>

        <ImageButton
            android:id="@+id/toggleCameraButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/cancel_button_background"
            app:tint="@android:color/background_dark"
            android:src="@drawable/video"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
